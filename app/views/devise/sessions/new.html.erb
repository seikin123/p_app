<div class="card" style="width: 30rem;">
  <h3>ログイン</h3>
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
    <ul class="alert text-danger"><%= alert %></ul>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="form-inline">
        <%= f.label :名前 %><br/>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前を入力してください", size: 52; %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力してください", size: 52; %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class:"btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
</div>